<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".CreateStationActivity"
     android:id="@+id/login_form"
     android:layout_width="match_parent"
     android:layout_height="match_parent" >

     <LinearLayout
         style="@style/LoginFormContainer"
         android:orientation="vertical" >

         <EditText
             android:id="@+id/station_artist"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:hint="@string/prompt_artist"
             android:imeActionId="@+id/create_station"
             android:imeActionLabel="@string/action_add_station_short"
             android:imeOptions="actionUnspecified"
             android:inputType="text"
             android:maxLines="1"
             android:singleLine="true" />

         <Button
             android:id="@+id/create_station_button"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="right"
             android:layout_marginTop="16dp"
             android:paddingLeft="32dp"
             android:paddingRight="32dp"
             android:text="@string/action_add_station_short" />
     </LinearLayout>
 </ScrollView>